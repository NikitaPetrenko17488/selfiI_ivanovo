<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.addPasswordFragment"

    >

    <TextView
        android:id="@+id/textRegistry3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=" Регистрация "
        android:textColor="@color/black"
        android:textSize="35dp"
        android:layout_marginTop="125dp"
        />

    <TextView
        android:id="@+id/textAddPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textRegistry3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"
        android:text="Придумайте пароль"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/editPasswordAddPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/textAddPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:textColorHint="#717171"
        android:textSize="20dp"
        android:background="@drawable/ramka_edit_text"
        android:hint=" Пароль "
        android:gravity="center"
        android:inputType="textPassword"
        />

    <ImageView
        android:id="@+id/btnRegistryStep3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
       android:src="@drawable/next"
        android:textAllCaps="false"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editPasswordAddPassword"
        />

</androidx.constraintlayout.widget.ConstraintLayout>