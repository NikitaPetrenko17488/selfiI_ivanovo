<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.mainWindowAdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
    <Button
        android:id="@+id/btn1Admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/btn_1Admin"
        android:layout_weight="1"
        android:paddingStart="100dp"
        android:paddingEnd="70dp"
        android:drawableStart="@drawable/users"
        android:text="Пользователи"
        

        />

        <Button
            android:id="@+id/btn2Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/btn_2Admin"
            android:layout_weight="1"
            android:paddingStart="100dp"
            android:paddingEnd="70dp"
            android:drawableStart="@drawable/users"
            android:text="Что-то"

            />
        <Button
            android:id="@+id/btn3Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/btn_3Admin"
            android:layout_weight="1"
            android:paddingStart="100dp"
            android:paddingEnd="70dp"
            android:drawableStart="@drawable/users"
            android:text="Что-то"

            />
        <Button
            android:id="@+id/btn4Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/btn_4Admin"
            android:layout_weight="1"
            android:paddingStart="100dp"
            android:paddingEnd="70dp"
            android:drawableStart="@drawable/users"
            android:text="Настройки"
            />
        <Button
            android:id="@+id/btn5Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/btn_5Admin"
            android:layout_weight="1"
            android:paddingStart="100dp"
            android:paddingEnd="70dp"
            android:drawableStart="@drawable/users"
            android:text="что-то"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>