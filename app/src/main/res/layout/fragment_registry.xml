<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.registryFragment"

    >

    <TextView
        android:id="@+id/textRegistry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=" Регистрация "
        android:textColor="@color/black"
        android:textSize="35dp"
        android:layout_marginTop="125dp"
        />

    <EditText
        android:id="@+id/editNumberRegistry"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       app:layout_constraintTop_toBottomOf="@id/textRegistry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/ramka_edit_text"
        android:textSize="20dp"
        android:text="+7"
        android:hint=" Номер телефона "
        android:inputType="phone"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnAvtorizyInRegistry"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/editNumberRegistry"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:background="@null"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="Уже есть аккаунт?"
        android:textAllCaps="false"
        />


   <ImageView
       android:id="@+id/btnRegistryStep1"
       android:layout_width="50dp"
       android:layout_height="50dp"
      app:layout_constraintTop_toTopOf="@id/btnAvtorizyInRegistry"
       app:layout_constraintEnd_toEndOf="@id/editNumberRegistry"
       app:layout_constraintBottom_toBottomOf="@id/btnAvtorizyInRegistry"
       android:backgroundTint="@null"
       android:src="@drawable/next"
       />

</androidx.constraintlayout.widget.ConstraintLayout>